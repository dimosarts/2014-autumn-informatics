program www;
var a,b,c,x: real;
  var  D,v,n: real;
begin
writeln('a*x^2+b*x+c=0');
writeln('введите a,b,c');
readln(a,b,c);
D:=sqrt(b*b-4*a*c);
if D=0
then 
writeln('уравнение имеет единственный корень х=',x);
if D>0 
then 
begin
v:=(-b+D)/2;
n:=(-b-D)/2;
writeln ('уравнение имеет два корня x1=',v,'x2=',n);
end;
if D<0 then
writeln('уравнение не имеет корней');
end.
